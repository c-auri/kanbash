#!/bin/bash

# causes array to be empty when there are no matches
shopt -s nullglob

todo=(${KANBASH_TASK_DIR}1-todo*)
doing=(${KANBASH_TASK_DIR}2-doing*)
done=(${KANBASH_TASK_DIR}3-done*)

echo TODO:
for task in "${todo[@]}"
do
    echo $(kanbash title "$task")
done
echo

echo DOING:
for task in "${doing[@]}"
do
    echo $(kanbash title "$task")
done
echo

echo DONE:
for task in "${done[@]}"
do
    echo $(kanbash title "$task")
done
